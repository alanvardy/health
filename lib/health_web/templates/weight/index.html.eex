<div class="cont">
  <h1>Weight Log</h1>
  <div class="row">
    <div class="col-lg-6">
    <%= render "partials/estimate.html", statistics: @statistics %>
      <%= render "partials/graph.html", logs: @logs, statistics: @statistics %>
      <%= link "View Long Term Trend", to: Routes.weight_path(@conn, :long_term) %>
    </div>
    <div class="col-lg-6 table-responsive">
      <%= render "partials/logs.html", logs: @logs, conn: @conn %>
    </div>
    <div class="mx-auto">
      <%= render "partials/inline-form.html", Map.put(assigns, :action, Routes.weight_path(@conn, :create)) %>
    </div>
  </div>
</div>